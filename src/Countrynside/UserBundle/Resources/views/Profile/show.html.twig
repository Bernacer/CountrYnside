{% extends '::base.html.twig'%}

{% block body %}
{{parent()}}
<div class="main container">
{% trans_default_domain 'FOSUserBundle' %}

    <div class="fos_user_user_show">
        <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
        <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
        {% if not user.premium %}
        <p> Vous n'avez pas de compte premium </p>
        <p><a href="{{path("countrynside_site_abonnement")}}"> Obtenir un compte premium </a> </p>
        {% else %}
        <p>Votre compte premium est valable jusqu'au {{user.dateExpiration|date('d/m/y')}}</p>
        <p><a href="{{path("countrynside_site_abonnement")}}"> Renouveler votre compte premium </a> </p>
        {% endif %}
    </div>
</div>
{% endblock body %}
